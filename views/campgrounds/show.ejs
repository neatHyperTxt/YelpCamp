<% layout('layouts/boilerplate') %> 

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%=found.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%=found.title%></h5>
                <p class="card-text"><%=found.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%=found.location%> </li>
                <li class="list-group-item">$<%=found.price%>/night</li>
            </ul>
            <div class="card-body text-center">
                <a class="card-link btn btn-warning" href="/campgrounds/<%=found._id%>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=found._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form> 
            </div>
            <div class="card-footer text-muted">
                2 days Ago
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form class="validated_form" action="/campgrounds/<%=found._id%>/reviews" method="POST" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="invalid-feedback">
                    Write Some Review!
                </div>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <button class="btn btn-success">Add Review</button>
        </form>
    </div>
</div>