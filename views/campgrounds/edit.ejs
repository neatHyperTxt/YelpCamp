<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=found._id%>?_method=PUT" method="POST" novalidate class="validated_form">
                <div class="mb-3">
                    <label class="form-label" for="title">Name</label>
                    <input value="<%=found.title%>" class="form-control" id="title" type="text"
                        name="campground[title]" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input value="<%=found.location%>" class="form-control" id="location" type="text"
                        name="campground[location]" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input value="<%=found.image%>" class="form-control" id="image" type="text"
                        name="campground[image]" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" type="text"
                        name="campground[description]" required><%=found.description%></textarea>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
                <div class="mb-3">
                    <label for="price">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input value="<%=found.price%>" id="price" type="text" class="form-control" aria-label="price"
                            placeholder="0" name="campground[price]" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%=found._id%> ">Back to Campgrounds</a>
        </div>
    </div>